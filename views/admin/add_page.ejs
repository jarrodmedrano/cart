<% include('../_layouts/adminheader') %>
<h2 class="page-title">Add page</h2>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
<br><br>
<form method="post" action="/admin/pages/add-page">
    <div class="form-group">
        <label for="title">Title</label>
        <input placeholder="Title" type="text" class="form-control" name="title" value="<%= title %>" />
    </div>
    <div class="form-group">
        <label for="slug">Slug</label>
        <input placeholder="Slug" type="text" class="form-control" name="slug" value="<%= slug %>" />
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea type="text" class="form-control" value="<%= content %>" rows="10"></textarea>
    </div>
    <button class="btn-submit btn-default">Submit</button>
</form>
<% include('../_layouts/adminfooter') %>